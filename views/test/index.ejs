<%- include("../partials/header") %>


<div class="bg-white shadow-lg rounded-lg p-8 max-w-2xl w-full">
    <h1 class="text-2xl font-bold text-center text-gray-700 mb-6">Test d'orientation</h1>

    <form action="/post/submit" method="POST" class="space-y-4">
        <% test.questions.forEach((q, index) => { %>
            <div class="p-4 border rounded-md">
                <p class="font-semibold"><%= q.question %></p>
                <% q.options.forEach(option => { %>
                    <label class="flex items-center mt-2">
                        <input type="radio" name="<%= q.category %>" value="<%= option %>" class="mr-2">
                        <span><%= option %></span>
                    </label>
                <% }) %>
            </div>
        <% }) %>

        <button type="submit" class="w-full bg-[#ff6f00] text-black font-semibold py-2">
            Envoyer mes r√©ponses
        </button>
    </form>
</div>


