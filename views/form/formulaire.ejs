<section class=" flex items-center justify-center min-h-screen">

    <div class="bg-gray-100 p-8  border border-[#EF4B2B] mt-10 rounded-lg shadow-lg w-full sm:w-3/4 md:w-2/4 lg:w-1/3 max-w-md">
        <form class="space-y-6" method="post " action="/inscription">
            <h2 class="text-2xl font-semibold text-center text-gray-800 ">Formulaire d'Inscription</h2>

            <div>
                <label for="nom" class="block text-gray-600">Nom :</label>
                <input type="text" id="nom" name="nom" placeholder="Votre nom" required class="w-full p-3 border border-gray-300 rounded-md mt-2">
            </div>

            <div>
                <label for="prenom" class="block text-gray-600">Prenom :</label>
                <input type="text" id="nom" name="prenom" placeholder="Votre prenom" required class="w-full p-3 border border-gray-300 rounded-md mt-2">
            </div>

            <div>
                <label for="email" class="block text-gray-600">Email :</label>
                <input type="email" id="email" name="email" placeholder="Votre email" required class="w-full p-3 border border-gray-300 rounded-md mt-2">
            </div>

            <div>
                <label for="serie" class="block text-gray-600">Serie :</label>
                <input type="text" id="serie" name="serie" placeholder="Votre serie" required class="w-full p-3 border border-gray-300 rounded-md mt-2">
            </div>

            <div>
                <label for="contact" class="block text-gray-600">Contact :</label>
                <input type="number" id="contact" name="contact" placeholder="Votre contact" required class="w-full p-3 border border-gray-300 rounded-md mt-2">
            </div>

            <button type="submit" class="w-full p-3 bg-orange-500 text-white font-semibold hover:bg-orange-400 transition duration-200 rounded-lg">S'inscrire</button>
        </form>
    </div>

</section>


